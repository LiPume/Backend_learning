<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.mapper.ClazzMapper">
    <insert id="insert">
        insert into clazz(name,room,begin_date,end_date,master_id,subject,create_time,update_time)
        values(#{name},#{room},#{beginDate},#{endDate},#{masterId},#{subject},#{createTime},#{updateTime})
    </insert>
    <update id="update">
        update clazz
        <set>
            <if test="name != null and name !='' " >
                name = #{name},
            </if>
            <if test="room != null">
                room = #{room},
            </if>
            <if test="beginDate != null">
                begin_date = #{beginDate},
            </if>
            <if test="endDate != null">
                end_date = #{endDate},
            </if>
            <if test="masterId != null">
                master_id = #{masterId},
            </if>
            <if test="subject != null">
                subject = #{subject},
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="delete">
        delete from clazz where id = #{id}
    </delete>

    <select id="list" resultType="com.itheima.pojo.Clazz">
        select clazz.*, emp.name masterName
        from clazz left join emp on clazz.master_id = emp.id
        <where>
            <if test="name != null and name != ''">
                clazz.name like concat('%',#{name},'%')
            </if>
            <if test="begin != null and end != null">
                and clazz.end_date between #{begin} and #{end}
            </if>
        </where>
        order by update_time desc
    </select>
    <select id="getInfoById" resultType="com.itheima.pojo.Clazz">
        select clazz.*, emp.name masterName from clazz left join emp on clazz.master_id = emp.id where clazz.id = #{id}
    </select>
    <select id="getStudentCountByClazzId" resultType="java.lang.Integer">
        select count(1) from student where clazz_id = #{clazzId}
    </select>
</mapper>